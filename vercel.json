{
  "version": 2,
  "builds": [
    { "src": "web/package.json", "use": "@vercel/next" },
    {
      "src": "server/api/**/*.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": "server/**"
      }
    }
  ],
  "routes": [
    { "src": "^/api/chat$", "dest": "/server/api/chat.py" },
    { "src": "^/api/chat-stream$", "dest": "/server/api/chat_stream.py" },
    { "src": "^/api/interaction$", "dest": "/server/api/interaction.py" },
    { "src": "^/api/participants$", "dest": "/server/api/participants.py" },
    { "src": "^/api/messages$", "dest": "/server/api/messages.py" },
    { "src": "/(.*)", "dest": "web/$1" }
  ]
}
