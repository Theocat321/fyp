{
  "version": 2,
  "builds": [
    { "src": "web/package.json", "use": "@vercel/next" },
    {
      "src": "server/api/**/*.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": "server/**"
      }
    }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/server/api/$1.py" },
    { "src": "/(.*)", "dest": "web/$1" }
  ]
}
